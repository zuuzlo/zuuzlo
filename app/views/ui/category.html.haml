  .page-header
    %h3 Category
  .row
    .l12.s12
      .panel.panel-default
        .panel-heading
          %h3.panel-title Category
        .panel-body
          .row
          -6.times do
            .l4.s4
              .thumbnail
                %img{'data-src' => "holder.js/120x40" }
