              .item
                %img{ 'data-src' => "holder.js/250x250" }
                .carousel-caption Store 2
              .item
                %img{'data-src' => "holder.js/250x250" }
                .carousel-caption Store 3
            %a.left.carousel-control{ href: "#carousel-store-generic", 'data-slide'=>"prev" }
              %span.icon-prev
            %a.right.carousel-control{ href: "#carousel-store-generic", 'data-slide'=>"next" }
              %span.icon-next
  .row
