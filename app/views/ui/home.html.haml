      .panel.panel-default
        .panel-heading
          %h3.panel-title Latest Coupon Codes
        .panel-body
          -6.times do
            .l2.s2
              .thumbnail
                %img{'data-src' => "holder.js/120x60" }
                .caption.coupon
                  %h4 Coupon Name
