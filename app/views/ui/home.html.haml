    .l3.s3
      .panel.panel-default
        .panel-heading
          %h3.panel-title Popular Stores
        .panel-body
          #carousel-store-generic.carousel.slide
            %ol.carousel-indicators
              %li.active{ 'data-target'=>"#carousel-store-generic",'data-slide-to'=>"0" }
